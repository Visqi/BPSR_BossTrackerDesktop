{
  "name": "blue-protocol-star-resonance",
  "version": "1.0.0",
  "description": "Blue Protocol Star Resonance - Boss Timer and Overlay Tool",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:portable": "electron-builder --config electron-builder-portable.json",
    "build:installer": "electron-builder --win nsis --config.win.target=nsis"
  },
  "keywords": [
    "blue-protocol",
    "boss-timer",
    "overlay"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "eventsource": "^2.0.2",
    "eventsource-polyfill": "^0.9.6"
  },
  "build": {
    "appId": "com.bpsr.timer",
    "productName": "BP Star Resonance",
    "compression": "normal",
    "publish": [
      {
        "provider": "github",
        "owner": "Visqi",
        "repo": "bpsr_bptimer_desktop"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "app-icon.png"
    },
    "portable": {
      "artifactName": "BPSR Creature Tracker.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "BPSR-Tracker-Setup.exe"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "images/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "images",
        "to": "images",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
